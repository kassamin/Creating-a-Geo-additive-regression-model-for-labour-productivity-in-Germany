  scale_fill_gradient(
    name = "Estimate",
    low = "#ffffcc",
    high = "#800026",
    space = "Lab",
    guide = "colourbar",
    aesthetics = "fill"
  ) +
  coord_fixed(ratio = 1, xlim = NULL, ylim = NULL, expand = TRUE) 
